<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dustinkush.project1.CategoryFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:maxWidth="120dp"
            android:maxHeight="120dp"
            android:adjustViewBounds="true"
            android:src="@drawable/faculty_bemisgreg"
            />

        <TextView
            android:id="@+id/faculty_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="Faculty"
            />

        <ImageButton
            android:id="@+id/top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:maxWidth="150dp"
            android:maxHeight="110dp"
            android:adjustViewBounds="true"
            android:src="@drawable/buildings_371main"
            />

        <TextView
            android:id="@+id/buildings_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="Buildings"
            />

        <ImageButton
            android:id="@+id/bottom_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/burlington_churchstreet"
            />

        <TextView
            android:id="@+id/burlington_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="Burlington"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/new_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="Reset All Scores"
            />

    </LinearLayout>


</RelativeLayout>

    <!-- android:layout_weight="0.1" -->