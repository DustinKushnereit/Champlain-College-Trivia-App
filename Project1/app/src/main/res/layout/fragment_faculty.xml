<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:maxWidth="140dp"
            android:maxHeight="140dp"
            android:adjustViewBounds="true"
            android:src="@drawable/faculty_fergusonjonathan"
            />

        <ImageButton
            android:id="@+id/top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:maxWidth="140dp"
            android:maxHeight="140dp"
            android:adjustViewBounds="true"
            android:src="@drawable/faculty_chen"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="120dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/bottom_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:maxWidth="140dp"
            android:maxHeight="140dp"
            android:adjustViewBounds="true"
            android:src="@drawable/faculty_bobmayer"
            />

        <ImageButton
            android:id="@+id/bottom_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:maxWidth="140dp"
            android:maxHeight="140dp"
            android:adjustViewBounds="true"
            android:src="@drawable/faculty_bemisgreg"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="50dp"
        android:text="Who is...."
        />

    <TextView
        android:id="@+id/number_correct_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:text="0/10 Correct"
        />

    <Button
        android:id="@+id/hint_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:layout_alignParentTop="true"
        android:text="Hint"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/text_box"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:paddingBottom="100dp"
            android:hint="Enter Last Name:"/>

        <Button
            android:id="@+id/check_answer_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:text="Check Answer"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/next_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:text="@string/next_button"
            />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:text="@string/reset_button"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="125dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/multiple_choice_a_button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="A: "
            />

        <Button
            android:id="@+id/multiple_choice_b_button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:text="B: "
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingTop="50dp"
        android:paddingBottom="75dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/multiple_choice_c_button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:text="C: "
            />

        <Button
            android:id="@+id/multiple_choice_d_button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:text="D:"
            />

    </LinearLayout>



</RelativeLayout>

    <!-- android:layout_weight="0.1" -->